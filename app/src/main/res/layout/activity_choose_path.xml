<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".ui.ChoosePathActivity">

    <TextView
        android:id="@+id/tv_act_choose_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/pokemon_hollow"
        android:textAlignment="center"
        android:text="@string/choose_your_path"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        />

    <ImageView
        android:id="@+id/iv_act_choose_path"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/pokemon_choose"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_act_choose_path"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/bt_tcg_act_choose_path"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Kotlin TCG"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_act_choose_path"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/bt_pokemon_act_choose_path"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Kotlin Pokemon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_tcg_act_choose_path"
        android:layout_marginTop="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>